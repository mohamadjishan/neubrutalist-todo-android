<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow (Now using accent_blue as requested) -->
    <item android:left="5dp" android:top="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/accent_blue" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Background and Border -->
    <item android:right="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/accent_purple" />
            <stroke android:width="2dp" android:color="@color/border_black" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>